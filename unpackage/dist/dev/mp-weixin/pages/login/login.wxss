  --td-brand-color-8: #e55a2b;
  --td-brand-color-9: #cc4921;
  --td-brand-color-10: #a03d1a;
  /* 功能色 */
  --td-success-color: #52c41a;
  --td-warning-color: #faad14;
  --td-error-color: #f5222d;
  --td-info-color: #1890ff;
  /* 文字色 */
  --td-text-color-primary: #333333;
  --td-text-color-secondary: #666666;
  --td-text-color-placeholder: #999999;
  --td-text-color-disabled: #cccccc;
  /* 背景色 */
  --td-bg-color-page: #f8f8f8;
  --td-bg-color-container: #ffffff;
  --td-bg-color-component: #fafafa;
  /* 边框色 */
  --td-border-color: #e8e8e8;
  --td-border-color-light: #f0f0f0;
  /* 圆角 */
  --td-radius-default: 8rpx;
  --td-radius-small: 4rpx;
  --td-radius-large: 12rpx;
  --td-radius-extra-large: 16rpx;
  /* 阴影 */
  --td-shadow-1: 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  --td-shadow-2: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  --td-shadow-3: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}
/* 全局重置样式 */
page.data-v-b237504c {
